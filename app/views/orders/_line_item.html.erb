<tr>
  <th scope="row"><%= line_item.product.name %></th>
  <td><%= image_tag(line_item.product.image.tiny.url) %></td>
  <td><%= line_item.product.description %></td>
  <td><%= humanized_money_with_symbol line_item.product.price %></td>
  <td><%= quantity %></td>
  <td><%= humanized_money_with_symbol line_item.product.price * quantity %></td>
 </tr>